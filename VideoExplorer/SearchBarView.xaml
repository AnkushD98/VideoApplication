<UserControl x:Class="VideoExplorer.SearchBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideoExplorer"
             mc:Ignorable="d" d:DesignWidth="800" Height="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblPageName" Content="Home" Grid.Column="0" Width="100" Background="{x:Null}" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="Auto"/>
        <TextBox x:Name="txtSearch" Text="Search..." Grid.Column="1" VerticalContentAlignment="Center" FontSize="12" />
        <Button Grid.Column="2" Width="50">
            <Image Source="Resource/SearchIcon.png" />
        </Button>
        <Button Grid.Column="3" Content="Upload" Click="OnUploadClick"/>
    </Grid>
</UserControl>
